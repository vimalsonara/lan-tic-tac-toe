{
  "manifest_version": 3,
  "name": "X-O Connect",
  "version": "1.0",
  "description": "Play Tic-Tac-Toe with friends over your local network",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ]
}
